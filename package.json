{
  "name": "headless-hunter",
  "version": "0.1.0",
  "description": "Automated AI agent for job hunting without the headache",
  "type": "module",
  "scripts": {
    "build": "bun build --compile --minify --sourcemap ./src/index.tsx --outfile dist/headless-hunter",
    "start": "bun run src/index.tsx",
    "dev": "bun run --watch src/index.tsx",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:render": "bun run scripts/test_markdown_visual.tsx",
    "test:watch": "bun test --watch"
  },
  "keywords": [
    "ai",
    "agent",
    "job-search",
    "nix"
  ],
  "author": "Alexandr Timchenko",
  "license": "MIT",
  "dependencies": {
    "@langchain/core": "^0.3.80",
    "@langchain/google-genai": "^0.1.12",
    "@langchain/langgraph": "^0.2.74",
    "@langchain/ollama": "^0.1.6",
    "ink": "^4.4.1",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "pdf-parse": "^2.4.5",
    "puppeteer": "^24.34.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/ink": "^2.0.3",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^18.3.27",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.7.4",
    "react-devtools-core": "^7.0.1",
    "strip-ansi": "^7.1.2",
    "typescript-eslint": "^8.50.1"
  }
}
